doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    title Wiki Crossword
    link(rel="stylesheet", href="/lib/bootstrap.min.css")
    style .centered { text-align: center; }
  body
    .container
      .row
        .col-sm-12
          h3 Wiki Crossword
      .row
        .col-sm-6
          p Assembled from randomly-selected Simple English wiki articles, available under a Creative Commons license.
        .col-sm-6
          p
            a(href="https://github.com/mapmeld/wiki-crossword") Source code
            span &nbsp;and&nbsp;
            a(href="https://github.com/mapmeld/wiki-crossword/issues") bug reports
            span &nbsp;on GitHub. Created by&nbsp;
            a(href="https://twitter.com/mapmeld") @mapmeld
            span .
      .row
        .col-sm-12.centered
          hr
          a.btn.btn-success.btn-large(href="/game/new") Generate New Game
          hr
      .row
        .col-sm-12
          .col-sm-6
            h4 Across
            ul#across
          .col-sm-6
            h4 Down
            ul#down
      .row
        .col-sm-12.centered
          img(src=image)

    script var clues = !{JSON.stringify(clues)};
    script(src="/scripts/puzzle.js")
